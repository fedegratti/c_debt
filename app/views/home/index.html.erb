<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>
<div class="col-lg-6">

      <h1 id="tables"><%= t('listing_your_debts') %></h1>

      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th><%= t('title') %></th>
            <th><%= t('amount') %></th>
            <th>Created by</th>
            <th><%= t('issue_date') %></th>
          </tr>
        </thead>

        <tbody>
          <% @debts.each do |debt| %>
            <tr>
              <td><%= debt.title %></td>
              <td><%= debt.amount %></td>
              <td><%= debt.user.name %></td>
              <td><%= debt.created_at.strftime("%d/%m/%Y %H:%M hs") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>
<div class="col-lg-1">
</div>
<div class="col-lg-4">
  <h1>Debts information</h1>

  <table class="table table-striped table-hover ">
    <tbody>
      <% for @user in @users %>
        <tr class="danger">
          <td>
            <strong>You owe <%= @user.name %></strong>
          </td>
          <td>
            $ <%= @user.debts.inject(0) {|amount, debt| (debt.owner_id == current_user.id && !debt.paid) ? amount + debt.amount : amount} %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tbody>
      <% @user_debts_amount = 0 %>
      <% @user_debts.each do |debt| %>
        <tr class="success">
          <td><strong><%= debt.owner.name %> owe you</strong></td>

          <td>$ <%= debt.amount %></td>
          <% @user_debts_amount += debt.amount %>
        </tr>
      <% end %>
    </tbody>
    <tr>
      <td>
        <strong>Total debts amount</strong>
      </td>
      <td>
        $ <%= (@users.inject(0) {|total_amount, user| user.debts.inject(0) {|amount, debt| (debt.owner_id == current_user.id && !debt.paid) ? amount + debt.amount : amount } + total_amount}) - @user_debts_amount %>
      </td>
    </tr>
  </table>
</div>
