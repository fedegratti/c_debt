<table id="friends_table" class="table table-striped table-hover ">
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('email') %></th>
      <th><%= t('image') %></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.email %></td>
        <td><% unless friend.image.nil? %><img src="<%= friend.image %>" class="friend_image"><% end %></td>
        <% if candidate == true %>
          <td><%= link_to t('add_friend'), add_friend_path(friend), method: :post %></td>
        <% else %>
          <td><%= link_to t('delete_friend'), user_friend_path(@user,friend), method: :delete, data: { confirm: t('are_you_sure') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
