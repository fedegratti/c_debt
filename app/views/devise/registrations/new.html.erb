<div class="col-lg-12">
  <h1><%= t('sign_up') %></h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="col-lg-6">
    <div class="well bs-component">
      <form class="form-horizontal">
        <fieldset>
          <legend></legend>

          <div class="row">
            <div class="form-group">
              <%= f.label t(:name) , class:'col-lg-2 control-label login' %>
              <div class="col-lg-10">
                <%= f.text_field :name, class:'form-control' %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <%= f.label t(:email) , class:'col-lg-2 control-label login' %>
              <div class="col-lg-10">
                <%= f.email_field :email, class:'form-control' %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <%= f.label t(:password) , class:'col-lg-2 control-label login' %>
              <% @placeholder %>
              <% if @minimum_password_length %>
                <% @placeholder = "(#{@minimum_password_length} characters minimum)" %>
              <% end %>
              <div class="col-lg-10">
                <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder: @placeholder %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <%= f.label t(:password_confirmation) , class:'col-lg-2 control-label login' %>
              <div class="col-lg-10">
                <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
              </div>
            </div>
          </div>

        <div class="row">
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="submit" class="btn btn-primary"><%= t('sign_up') %></button>
            <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>

      </fieldset>
    </form>
  </div>
</div>
<% end %>
