<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>
<div class="col-lg-6">

    <h1 id="tables"><%= t('monthly_report_of', month: t( (Time.now - 1.month).strftime("%B") )) %></h1>

    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th><%= t('name') %></th>
          <th><%= t('email') %></th>
          <th><%= t('total_expenses') %></th>
          <th><%= t('total_expenses_amount') %></th>
          <th><%= t('total_debts') %></th>
          <th><%= t('total_debts_amount') %></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.expenses.count %></td>
            <td><%= user.expenses.inject(0) {|amount, expense|  amount + expense.amount } %></td>
            <td><%= user.debts.count %></td>
            <td><%= user.debts.inject(0) {|amount, debt|  amount + debt.amount } %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
</div>
