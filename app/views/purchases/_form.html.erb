<div class="col-lg-6">
  <div class="well bs-component">
    <form class="form-horizontal">
      <fieldset>
        <legend></legend>

          <div class="form-group">
            <%= f.label t(:name), class:'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.text_field :name, class:'form-control', placeholder: t(:name), required: true %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label t(:amount), class:'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.number_field :amount, class:'form-control', placeholder: t(:amount), required: true %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label t(:users), class:'col-lg-2 control-label'  %>
            <div class="col-lg-10">
              <p><%= t('users_description') %></p>
              <%= f.select(
                  "user",
                  @users,
                  {include_hidden:false},
                  {multiple: true, class: "form-control", required: true})
              %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= link_to t(:cancel), user_purchases_path, class:"btn btn-default" %>
              <button type="submit" class="btn btn-primary"><%= t(:submit) %></button>
            </div>
          </div>

      </fieldset>
    </form>
  </div>
</div>
<% end %>
