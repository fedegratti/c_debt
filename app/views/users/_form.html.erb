<div class="col-lg-6">
  <div class="well bs-component">
    <form class="form-horizontal">
      <fieldset>
        <legend></legend>

        <div class="form-group">
          <%= f.label t(:name), class:'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :name, class:'form-control', placeholder: t(:name), required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t(:email), class:'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :email, class:'form-control', placeholder: t(:email), required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t(:password), class:'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.password_field :password, class:'form-control', placeholder: t(:password), required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t(:password_confirmation), class:'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.password_field :password_confirmation, class:'form-control', placeholder: t(:password_confirmation), required: true %>
          </div>
        </div>


        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= link_to t(:cancel), '/', class:"btn btn-default" %>
            <button type="submit" class="btn btn-primary"><%= t(:submit) %></button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
<% end %>
