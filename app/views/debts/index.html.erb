<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <h1 id="tables"><%= t('listing_debts_you_created') %></h1>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('title') %></th>
          <th><%= t('amount') %></th>
          <th><%= t('debt_owner') %></th>
          <th><%= t('issue_date') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @debts.each do |debt| %>
          <tr>
            <td><%= debt.title %></td>
            <td><%= debt.amount %></td>
            <td><%= debt.owner.name %></td>
            <td><%= debt.created_at.strftime("%d/%m/%Y %H:%M hs") %></td>
            <td><%= link_to t('mark_as_paid'), pay_user_debt_path(debt) %></td>
            <td><%= link_to t('edit'), edit_user_debt_path(@user,debt) %></td>
            <td><%= link_to t('destroy'), user_debt_path(@user,debt), method: :delete, data: { confirm: t('are_you_sure') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to t('new_debt'), new_user_debt_path, class:"btn btn-primary" %>
</div>

