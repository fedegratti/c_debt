<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('listing_debts_you_created') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('title') %></th>
          <th><%= t('amount') %></th>
          <th><%= t('debt owner') %></th>
          <th><%= t('issue_date') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @debts.each do |debt| %>
          <tr>
            <td><%= debt.title %></td>
            <td><%= debt.amount %></td>
            <td><%= debt.owner.name %></td>
            <td><%= debt.created_at.strftime("%d/%m/%Y %H:%M hs") %></td>
            <td><%= link_to 'Mark as paid', pay_user_debt_path(debt) %></td>
            <td><%= link_to 'Edit', edit_user_debt_path(@user,debt) %></td>
            <td><%= link_to 'Destroy', user_debt_path(@user,debt), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'New Debt', new_user_debt_path, class:"btn btn-primary" %>
